{
    "env": {
        "browser": true,
        "commonjs": true,
        "webextensions": true,
        "es6": true
    },
    "globals": {
        "AgeCheck": "readonly",
        "Background": "readonly",
        "Common": "readonly",
        "Config": "readonly",
        "ContextMenu": "readonly",
        "Currency": "readonly",
        "DOMHelper": "readonly",
        "DOMPurify": "readonly",
        "DynamicStore": "readonly",
        "EarlyAccess": "readonly",
        "EnhancedSteam": "readonly",
        "ExtensionLayer": "readonly",
        "GameId": "readonly",
        "GDynamicStore": "readonly",
        "Highlights": "readonly",
        "HTML": "readonly",
        "HTMLParser": "readonly",
        "Inventory": "readonly",
        "Language": "readonly",
        "Localization": "readonly",
        "LocalStorage": "readonly",
        "MediaPage": "readonly",
        "Messenger": "readonly",
        "Price": "readonly",
        "ProgressBar": "readonly",
        "RequestData": "readonly",
        "StringUtils": "readonly",
        "SyncedStorage": "readonly",
        "UpdateHandler": "readonly",
        "User": "readonly"
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "prettier"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "quotes": [
            "error",
            "double",
            {"allowTemplateLiterals": true}
        ],
        "semi": [
            "error",
            "always"
        ],
        "arrow-body-style": ["error", "as-needed"],
        "array-bracket-newline": ["error", "never"],
        "array-bracket-spacing": ["error", "never"],
        "arrow-parens": ["error", "always"],
        "arrow-spacing": ["error", { "before": true, "after": true }],
        "block-spacing": ["error", "always"],
        "callback-return": ["error", ["callback", "cb", "next"]],
        "comma-dangle": ["error", "never"],
        "comma-spacing": ["error", { "before": false, "after": true }],
        "curly": ["error", "all"],
        "eol-last": ["error", "never"],
        "eqeqeq": ["error", "always"],
        "function-paren-newline": ["error", "never"],
        "handle-callback-err": "error",
        "implicit-arrow-linebreak": ["error", "beside"],
        "keyword-spacing": ["error", {
            "before": true,
            "after": true
        }],
        "max-statements-per-line": ["error", {"max": 1}],
        "multiline-ternary": ["error", "never"],
        "no-case-declarations": 0,
        "no-console": 0,
        "no-const-assign": "error",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-duplicate-case": "error",
        "no-empty": "error",
        "no-extra-parens": ["error", "all"],
        "no-func-assign": "error",
        "no-lonely-if": "error",
        "no-multi-assign": "error",
        "no-multi-spaces": "error",
        "no-multiple-empty-lines": ["error", {"max": 1 }],
        "no-tabs": "error",
        "no-trailing-spaces": "error",
        "no-unused-vars": "error",
        "no-useless-concat": "error",
        "no-var": "error",
        "object-curly-newline": ["error", {"multiline": true, "minProperties": 0}],
        "object-curly-spacing": "error",
        "object-property-newline": "error",
        "padded-blocks": ["error", "never"],
        "prefer-arrow-callback": "error",
        "prefer-rest-params": "error",
        "prefer-spread": "error",
        "prefer-template": "error",
        "quote-props": ["error", "always"],
        "space-before-blocks": "error",
        "space-before-function-paren": ["error", "never"],
        "space-infix-ops": "error",
        "spaced-comment": "error",
        "template-curly-spacing": ["error", "never"]
    }
}