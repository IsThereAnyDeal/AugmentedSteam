{
  "name": "Enhanced Steam",
  "version": "3.0",
  "description": "Enhances the Steam Experience",
  "icons": { "128": "img/enhancedsteam.png" },
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "storage",
    "http://www.enhancedsteam.com/"
  ],
  "web_accessible_resources": [
    "img/game_area_warning.png", "img/line_chart.png", "img/metacritic_bg.png",
    "img/ico/steamgifts.ico", "img/ico/steamtrades.ico", "img/ico/steamrep.ico", "img/ico/wastedonsteam.ico", "img/ico/sapi.ico", "img/ico/backpacktf.ico",
    "enhancedsteam.css"
  ],
  "homepage_url": "http://www.EnhancedSteam.com/",
  "content_scripts": [
    {
      "matches": ["http://store.steampowered.com/*", "https://store.steampowered.com/*", "http://steamcommunity.com/*"],
      "js": ["jQuery.min.js", "enhancedsteam.js"],
      "css": ["enhancedsteam.css"]
    }
  ]  
}